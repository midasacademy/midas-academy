<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Midas Academy | Courses</title>
    <link rel="stylesheet" href="../stylesheets/dashboard.css">
    <link rel="stylesheet" href="../stylesheets/register.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css" rel="stylesheet">
    <style>
        #left #links .link:nth-child(1) {
            color: #00000085;
        }

        #left #links .link:nth-child(4) {
            color: #00000085;
        }

        #left #links .link:nth-child(5) {
            color: #00000085;
        }
        
        #left #links .link:nth-child(6) {
            color: #000;
        }
        tbody a{
            padding: 0.8vh 0.5vw;
            display: flex;
            gap: 3px;
            border-radius: 10px;
        }
        tbody #action-button{
            display: flex;
            gap: 1vw;
        }
    </style>
</head>

<body>
    <div id="main">

        <% include ./partials/nav.ejs %>

        <div style="position: relative;" id="right">
            <div style="display: flex; flex-direction: column;" class="dashboard">
                <div class="students">
                    <h2>Courses</h2>
                    <table style="margin-bottom: 15px;">
                        <thead>
                            <tr>
                                <th>Course Name</th>
                                <th>Cousre Fees(One time)</th>
                                <th>Cousre Fees(Installment)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% courses.forEach(function(course){ %>
                                <tr>
                                    <td><%= course.course_name %></td>
                                    <td><%= course.course_fees %></td>
                                    <td><%= course.course_fees_installment %></td>
                                    <td id="action-button">
                                        <a href="/edit-course" style="color: black;"><i class="ri-pencil-fill"></i> Edit</a>
                                        <a href="/delete-course/<%= course._id %>" style="color: red;"><i class="ri-delete-bin-fill"></i> Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                            <!-- Add more rows for other students -->
                        </tbody>
                    </table>
                    <a id="course_add" style="cursor: pointer; font-weight: 500; font-size: 1vw; margin-left: 2vw; color: black; background-color: salmon; color: #fff; padding: 10px; border-radius: 10px;"><i class="ri-add-fill"></i> Add Course</a>
                </div>
            </div>
            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: #00000075; display: none; flex-direction: column; align-items: center; justify-content: center;" id="form">
                <form style="width: 30%; color: #fff; background-color: #252525; border-radius: 10px; padding: 20px;" method="post" action="/add_course">
                    <h2>Add Course</h2>
                    Course Name: <input type="text" name="course_name" id="">
                    Fees (One-time): <input type="number" name="fees_one" id="">
                    Fees (Installment): <input type="number" name="fees_two" id="">
                    <button type="submit">Add</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.querySelector("#course_add").addEventListener('click', function(){
            document.querySelector("#form").style.display = "flex";
        })
    </script>
</body>

</html>